<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.homeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/textview_background"
            android:gravity="center"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:alpha="0.7"

            android:gravity="center"
            android:text="10:18"
            android:textSize="35dp"
            android:background="@drawable/sun"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/little_man"
                android:layout_width="43dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/little_man" />

            <TextView
                android:id="@+id/lastOld"
                android:layout_width="112dp"
                android:layout_height="52dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/little_man"
                android:text="剩余人数"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/lastOldText"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/lastOld"
                android:textColor="#dd6d6d"
                android:textSize="60dp" />

            <Button
                android:id="@+id/button_qwc"
                android:layout_width="61dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="70dp"
                android:alpha="0.9"
                android:background="@drawable/happy"
                android:onClick="quwancheng"
                android:textColor="#6e0c0c"
                android:textSize="30dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </RelativeLayout>

        <Button
            android:id="@+id/button_zx"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/zx_background"
            android:onClick="zhuxiao"
            android:text="注销"
            android:textSize="20dp" />

        <include layout="@layout/bottom" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>